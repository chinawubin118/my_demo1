<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_retrofit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".previous.ui.activity.RetrofitActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_request_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="tv_request_info"
                android:textColor="#88000000" />

            <TextView
                android:id="@+id/tv_request_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="tv_request_result"
                android:textColor="#88000000" />

            <TextView
                android:id="@+id/tv_request_info_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="tv_request_info_2"
                android:textColor="#88000000" />

            <TextView
                android:id="@+id/tv_request_result_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="tv_request_result_2"
                android:textColor="#88000000" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
