<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_test_demo1_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".previous.ui.activity.test.TestDemo1ViewActivity">

    <com.tuoyan.myapplication.previous.view.Demo1View
        android:id="@+id/demo1View"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_alignParentBottom="true"
        android:background="#11000000"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_up"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="上"
            android:textColor="#88000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_down"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="下"
            android:textColor="#88000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_left"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="左"
            android:textColor="#88000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_right"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="右"
            android:textColor="#88000000"
            android:textSize="18sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="50dp"
        android:layout_height="140dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#11000000"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_speed_up"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="速度++"
            android:textColor="#88000000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_speed_down"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="速度--"
            android:textColor="#88000000"
            android:textSize="12sp" />
    </RelativeLayout>
</RelativeLayout>
